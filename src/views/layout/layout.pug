include ../blocks/variables
include ../blocks/components
block variables
doctype html
html(lang='ru')
  head
    meta(charset="utf-8")
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='format-detection' content='telephone=no')
    //color
    meta(name="theme-color" content="#424346")
    //favicons
    link(rel='icon' type='image/png' sizes='16x16' href='./img/favicons/favicon-16x16.png')
    link(rel='icon' type='image/png' sizes='32x32' href='./img/favicons/favicon-32x32.png')
    link(rel='apple-touch-icon' sizes='180x180' href='./img/favicons/apple-touch-icon.png')
    //open graph
    meta(property='og:title' content='От технологии до совершенного продукта')
    meta(property='og:site_name' content=sitename) 
    meta(property='og:url' content='https://articadev1.github.io/Uplast/build/') 
    meta(property='og:description' content='Современная упаковка для вашего бизнеса')
    meta(property='og:image' content='https://articadev1.github.io/Uplast/build/img/favicons/apple-touch-icon-1024x1024.png')
    //fonts
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700;800&display=swap' rel='stylesheet')
    //styles
    link(rel="stylesheet" href="./styles/theme.css")
    link(rel="stylesheet" href="./styles/common.css")
    

  body
    script(src="./scripts/test-device.js")

    .wrapper
      include ../blocks/header
      include ../blocks/nav
      include ../blocks/location
      main.main
        block content
      include ../blocks/footer

    //jquery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')

    //webpack
    script(src="./scripts/common.js")
    

    //preview only
    include ../blocks/helper
